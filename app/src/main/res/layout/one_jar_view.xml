<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inventory_content_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true">


        <ImageView
            android:id="@+id/my_jar_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Obrazek"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_jar_of_jam_medium" />

        <TextView
            android:id="@+id/my_jar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="12pt"
            android:text="Bigos" />

        <ImageButton
            android:id="@+id/x_button"
            android:onClick="deleteJar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/places_ic_clear" />


</RelativeLayout>